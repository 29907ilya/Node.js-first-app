<h1>Add course</h1>

<form action="/add" method="post">
  <div class="input-field">
    <input
      id="title"
      name="title"
      type="text"
      class="validate"
      required
    />
    <label for="title">Name of course</label>
    <span class="helper-text" data-error="Enter course name"></span>
  </div>

  <div class="input-field">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required min="1"
    />
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>

  <div class="input-field">
    <input
      id="img"
      name="img"
      type="text"
      class="validate"
      required
    />
    <label for="img">Img URL</label>
    <span class="helper-text" data-error="Enter URL"></span>
  </div>
  <button class="btn btn-primary">Add course</button>
</form>